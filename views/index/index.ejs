<div class="container">
    <div class="row mt20">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="box">
                <div class="box-head">
                    <h3 class="head-title">Mais vendidos</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="product-carousel">
        <div class="box-body">
            <div class="row">
                <div class="owl-carousel owl-two owl-theme">
                    <!-- product -->
                    <% maisVendidos.forEach(produto => { %>
                        <div class="item">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="product-block">
                                    <div class="product-img"><img src="<%= produto.imgCapa %>" alt=""></div>
                                    <div class="product-content">
                                        <h5><a href="/produto/<%= produto.slug %>" class="product-title"><%= produto.nome %> <strong>(<%= produto.fabricante %>)</strong></a></h5>
                                        <div class="product-meta"><a href="/produto/<%= produto.slug %>" class="product-price"><%= (produto.valorVista).toLocaleString('pt-BR',{minimumFractionDigits: 2 , style: 'currency', currency: 'BRL'})%></a>
                                            <a href="/produto/<%= produto.slug %>" class="discounted-price"><%= (produto.valorVista+(produto.valorVista*20/100)).toLocaleString('pt-BR',{minimumFractionDigits: 2 , style: 'currency', currency: 'BRL'})%></a>
                                            <span class="offer-price">20%off</span>
                                        </div>
                                        <div class="shopping-btn">
                                            <a href="/produto/<%= produto.slug %>" class="product-btn btn-cart"><i class="fa fa-shopping-cart"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.product -->
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
