
<div class="content">
    <div class="container">
        <div class="box">
            <div class="row">
                <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12 ">
                    <div class="box-body">
                        <div class="row">
                            
                                <h3 class="mb10">Criar conta</h3>
                            
                            <% if (msg.type == true) { %>
                                <%= msg.msg %> 
                            <% } %>
                            <form action="/user/validar" method="post">
                                <div class="row c1 mb-3" style="padding-top: 10px;">
                                    <div class="col-md-6 mb-3">
                                        <label for="nome" class="form-label">Nome</label>
                                        <input type="text" required="true" name="nome" class="form-control">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="sobrenome" class="form-label">Sobrenome</label>
                                        <input type="text" required="true" name="sobrenome" class="form-control">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">E-mail</label>
                                        <input type="email" required="true" name="email" class="form-control">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="password" class="form-label">Senha</label>
                                        <input type="password" required="true" name="password" class="form-control">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="confirmarPassword" class="form-label">Confirmar senha</label>
                                        <input type="password" required="true" name="confirmarPassword" class="form-control">
                                    </div>
                                </div>
                                <div class="row c1" id="formEndereco">
                                    <div class="col-md-4 mb-3">
                                        <label for="endereco" class="form-label">Endereço</label>
                                        <input type="text" required="true" name="endereco" class="form-control">
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label for="numero" class="form-label">N°</label>
                                        <input type="text" required="true" name="numero" class="form-control">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="complemento" class="form-label">Complemento</label>
                                        <input type="text" required="true" name="complemento" class="form-control">
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label for="bairro" class="form-label">Bairro</label>
                                        <input type="text" required="true" name="bairro" class="form-control">
                                    </div>
                                
                                
                                    <div class="col-md-3 mb-3">
                                        <label for="cidade" class="form-label">Cidade</label>
                                        <input type="text" required="true" name="cidade" class="form-control">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="estado" class="form-label">Estado</label>
                                        <select name="estado" id="" required="true" class="form-control">
                                            <% UF.forEach(element => { %>
                                                <option value="<%= element.sigla%>"><%= element.nome %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="cep" class="form-label">CEP</label>
                                        <input type="text" required="true" name="cep" class="form-control">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <button class="btn btn-primary btn-block mb10" type="submit">CRIAR</button>
                                    </div>          
                                </div>
                            </form>
                        </div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>
<!-- /.login-form -->
    