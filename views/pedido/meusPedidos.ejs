<h2 class="mt-3"><i class="fas fa-boxes"></i> MEUS PEDIDOS</h2>
<div class="row c1" style="margin-bottom: 800px;">
  <% if (pedidos == false) { %>
    <div class="mt-2">
      <h3>Você não tem nenhum pedido ainda...</h3>

    </div>
  <% } else { %>
    <div>
      <table class="table">
          <thead>
            <tr>
              <th scope="col">ID Pedido</th>
              <th scope="col">Descrição</th>
              <th scope="col">Status</th>
              <th scope="col">Total</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% pedidos.forEach(pedido => { %>
              <tr>
                <th scope="row"><%= pedido.codigo %></th>
                <td><%= pedido.produtosId %></td>
                <td><%= pedido.status %></td>
                <td><%= (pedido.total).toLocaleString('pt-BR',{minimumFractionDigits: 2 , style: 'currency', currency: 'BRL'})%></td>
              </tr>
            <% }) %>
          </tbody>
      </table>
    </div>
  <% } %>  
</div>