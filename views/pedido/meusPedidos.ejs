<div class="content">
  <div class="">
      <div class="box">
          <div class="row">
              <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12 ">
                  <div class="box-body">
                      <div class="row">
                          
                              <h3 class="mb10">Meus pedidos</h3>
                              <div class="col-md-12">
                                <div class="row c1">
                                  <% if (pedidos == false) { %>
                                    <div class="mt-2">
                                      <h3>Você não tem nenhum pedido ainda...</h3>
                                
                                    </div>
                                  <% } else { %>
                                    <div>
                                      <table class="table">
                                          <thead>
                                            <tr>
                                              <th scope="col">ID Pedido</th>
                                              <th scope="col">Descrição</th>
                                              <th scope="col">Status</th>
                                              <th scope="col">Total</th>
                                              <th scope="col"></th>
                                            </tr>
                                          </thead>
                                          <tbody>
                                            <% pedidos.forEach(pedido => { %>
                                              <tr>
                                                <th scope="row"><%= pedido.codigo %></th>
                                                <td>
                                                  <ul>
                                                    <% pedido.produtosId.forEach(produto => { %>
                                                      <li><%= produto %> </li>
                                                    <% }) %>
                                                  </ul>
                                                <td><%= pedido.status %></td>
                                                <td><%= (pedido.total).toLocaleString('pt-BR',{minimumFractionDigits: 2 , style: 'currency', currency: 'BRL'})%></td>
                                              </tr>
                                            <% }) %>
                                          </tbody>
                                      </table>
                                    </div>
                                  <% } %>  
                                </div>
                              </div>
                          
                      </div>
                  </div>
              </div>    
          </div>
      </div>
  </div>
</div>
