          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="row">
                  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 mb10 alignright">
                      <form>
                          <div class="select-option form-group">
                              <select name="select" class="form-control">
                                  <option value="">Select</option>
                                  <option value="">MAIS VENDIDO</option>
                                  <option value="">MENOR PREÇO</option>
                                  <option value="">MAIOR PREÇO</option>
                              </select>
                          </div>
                      </form>
                  </div>
              </div>
              <div class="row">
                  <!-- product -->
                  <% if (produtos == false) { %>
                    <div style="margin-bottom: 500px;">
                        <h3>Nada encontrado...</h3>
                    </div>
                  <% } else { %>
                  <% produtos.forEach(produto => { %>
                  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 mb30">
                      <div class="product-block">
                          <div class="product-img"><img src="<%= produto.imgCapa %>" alt=""></div>
                          <div class="product-content">
                              <h5 class="quebrarTexto"><a href="/produto/<%= produto.slug %>" class="product-title"><%= produto.nome %> <strong>(<%= produto.fabricante %>)</strong></a></h5>
                              <div class="product-meta"><a href="/produto/<%= produto.slug %>" class="product-price"><%= (produto.valorVista).toLocaleString('pt-BR',{minimumFractionDigits: 2 , style: 'currency', currency: 'BRL'})%></a>
                                  <a href="/produto/<%= produto.slug %>" class="discounted-price"><%= (produto.valorVista+(produto.valorVista*20/100)).toLocaleString('pt-BR',{minimumFractionDigits: 2 , style: 'currency', currency: 'BRL'})%></a>
                                  <span class="offer-price">20%off</span>
                              </div>
                              <div class="shopping-btn">
                                  <a href="/produto/<%= produto.slug %>" class="product-btn btn-cart"><i class="fa fa-shopping-cart"></i></a>
                              </div>
                          </div>
                      </div>
                  </div>
                  <% }) %>
                  <% } %> 
